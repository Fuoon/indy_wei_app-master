<div class="row">
  <aside class="span4">
    <section>
      <h1>
          <%= @article.title %>
          <br>
          <%= image_tag(@article.image_url(:whole)) if @article.image? %>
          <br>
          <%= @article.content %>
      </h1>
    </section>
  </aside>
  <div class="row">
      <div id="article_comment">
        <div class="span6">
            <%= form_for ([@article, @article.article_comments.build]) do |f| %>

              <%= f.label "Comment" %>
              <%= f.text_area :content, :rows => "4" %>

              <%= f.submit "Comment", class: "btn btn-large btn-primary" %>
      
            <% end %>
        </div>
      </div>
  </div>
  <div class="span8">
    <% if @article_comments.any? %>
      <% @article_comments.each do |article_comment| %>
        <span class="content"><%= article_comment.content %></span>
        <br>
      <% end %>
    <% end %>
  </div>
  <h4><%= link_to "Edit", edit_article_path(@article) %></h4>
</div>