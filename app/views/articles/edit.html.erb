<% provide(:title, "Edit Article") %>
<h1>Edit Article</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@article) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :content %>
      <%= f.text_area :content, :row => "10" %>

      <%= f.file_field :image %>

      <%= f.submit "Save", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>