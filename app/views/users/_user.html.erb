<li>
  <% if !@user.image? %>
		<%= image_tag("default.png") %>
  <% else %>
		<%= image_tag(@user.image_url) if @user.image? %>
  <% end %>
  <%= link_to user.username, user %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
</li>