<div id="show-user">
	<div class="row">
	  <aside class="span4">
	    <section>
	      <h1>
	        <div class="gravatar">
	        	<%= image_tag(@user.image_url) %>
	        </div>
	        <div class="show-username">
	        	<p><%= @user.username %></p> 
	        	<% if @user == current_user %>
					<%= link_to edit_user_path(current_user), class: "btn btn-primary", id: "edit-user-button" do %>
					    Edit
					<% end %>
	        	<% end %>
				<% if current_user.admin? && current_user != @user %>
					<% if @user.admin? %>
						<%= form_tag url_for(controller: "users", action: "admin"), method: "post" do %>
							<%= button_tag(type: "submit", class: "btn btn-danger", id: "admin-button") do %>
								UnAdmin
							<% end %>
						<% end %>
					<% else %>
						<%= form_tag url_for(controller: "users", action: "admin"), method: "post" do %>
							<%= button_tag(type: "submit", class: "btn btn-success", id: "admin-button") do %>
								Admin
							<% end %>
						<% end %>
					<% end %>
				<% end %>
	        </div>
	      </h1>
	    </section>
	  </aside>
	  <div class="span8">
	    <% if @article_comments.any? %>
	      <h3>Article Comments (<%= @article_comments.count %>)</h3>
	      <ol class="microposts">
	        <li>
			  <% @article_comments.each do |article_comment| %>
			  	<% if article_comment.article == nil %>
					<span class="title" style="color: red;">The Article was deleted</span>
			  	<% else %>
					<span class="title"><%= link_to article_comment.article.title, article_comment.article %></span>
			  	<% end %>
			  	<span class="content"><%= article_comment.content %></span>
				  <span class="timestamp">
				    Posted <%= time_ago_in_words(article_comment.created_at) %> ago.
				  </span>	
			  <% end %>
			</li>
	      </ol>
	    <% end %>
	  </div>
	  <aside class="span4">
	    <section>
	    </section>
	  </aside>
	  <div class="span8">
	    <% if @game_comments.any? %>
	      <h3>Game Comments (<%= @game_comments.count %>)</h3>
	      <ol class="microposts">
	        <li>
			  <% @game_comments.each do |game_comment| %>
			    <% if game_comment.game == nil %>
					<span class="title" style="color: red;">The Game was deleted</span>
			  	<% else %>
					<span class="title"><%= link_to game_comment.game.name, game_comment.game %></span>
			  	<% end %>
			  	<span class="content"><%= game_comment.content %></span>
				  <span class="timestamp">
				    Posted <%= time_ago_in_words(game_comment.created_at) %> ago.
				  </span>	
			  <% end %>
			</li>
	      </ol>
	    <% end %>
	  </div>
	</div>
</div>
<div class="row">
	<aside class="span4">
		<section>
		</section>
	</aside>
	<div class="span8">
		<div id="uploaded-games">
			<div class="uploaded-game-image">
		    <% if @uploaded_games.count > 0 %>
		    	<h3>Uploaded Games (<%= @uploaded_games.count %>)</h3>
		      <div id="myCarousel" class="carousel slide">
		        <ol class="carousel-indicators">
		          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		          <li data-target="#myCarousel" data-slide-to="1"></li>
		          <li data-target="#myCarousel" data-slide-to="2"></li>
		          <li data-target="#myCarousel" data-slide-to="3"></li>
		          <li data-target="#myCarousel" data-slide-to="4"></li>
		        </ol>
		        <div class="carousel-inner">
		          <div class="active item">
		            <%= link_to image_tag(@uploaded_games.first.image_attachments.first.image_url), @uploaded_games.first %>
		          </div>
		          <% if @uploaded_games.count > 1 %>
		            <div class="item">
		              <%= link_to image_tag(@uploaded_games.second.image_attachments.first.image_url), @uploaded_games.second %>
		            </div>
		          <% end %>
		          <% if @uploaded_games.count > 2 %>
		            <div class="item">
		              <%= link_to image_tag(@uploaded_games.third.image_attachments.first.image_url), @uploaded_games.third %>
		            </div>
		          <% end %>
		          <% if @uploaded_games.count > 3 %>
		            <div class="item">
		              <%= link_to image_tag(@uploaded_games.fourth.image_attachments.first.image_url), @uploaded_games.fourth %>
		            </div>
		          <% end %>
		          <% if @uploaded_games.count > 4 %>
		            <div class="item">
		              <%= link_to image_tag(@uploaded_games.fifth.image_attachments.first.image_url), @uploaded_games.fifth %>
		            </div>
		          <% end %>
		        </div>
		        <!-- Carousel nav -->
		        <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
		        <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
		      </div>
		    <% end %>
		  </div>
		</div>
		<% if @uploaded_games.count > 0 %>
			<%= link_to uploaded_games_path, class: "btn btn-primary btn-large", id: "show-all-uploaded-games" do %>
		        Show All
		    <% end %>
		<% end %>
	</div>
</div>

