<header class="navbar navbar-inverse">
      <div class="navbar-inner">
	      <div class="nav pull-left">
	      	<%= link_to image_tag("indy_wei_logo.png", alt: "IndyCrew" , id: "logo"), root_path %>
	      </div>
	      <div class="container">
	      	<ul class="nav nav-pills nav pull-left">
		      	<li>
		      		<%= link_to root_path do %>
						<i class="icon-home icon-white"></i> Home
		      		<% end %>
		      	</li>
		      	<li id="fat-menu" class="dropdown">
	              		<a href="#" class="dropdown-toggle" data-toggle="dropdown">
	                		<i class="icon-star icon-white"></i> Game <b class="caret"></b>
	              		</a>
	              		<ul class="dropdown-menu">
	              			<li>
	              				<%= link_to games_path do %>
									<i class="icon-star icon-black"></i>Games
	              				<% end %>
	              			</li>
	              			<li>
	              				<%= link_to new_game_path do %>
									<i class="icon-file icon-black"></i>Share a Game	
	              				<% end %>
	              			</li>
	              		</ul>
            	</li>
		        <li>
		        	<%= link_to library_path  do %>
						<i class="icon-th-large icon-white"></i> Library
		        	<% end %>
		        </li>
		        <% if signed_in? %>
		        	<li id="fat-menu" class="dropdown">
	              		<a href="#" class="dropdown-toggle" data-toggle="dropdown">
	                		<i class="icon-user icon-white"></i> Account <b class="caret"></b>
	              		</a>
	              		<ul class="dropdown-menu">
	              			<li>
	              				<%= link_to current_user do %>
									<i class="icon-user icon-black"></i>Profile
	              				<% end %>
	              			</li>
			                <li>
			                	<%= link_to signout_path, method: "delete" do %>
									<i class="icon-off icon-black"></i>Sign out
			                	<% end %>
			                </li>
	              		</ul>
            		</li>
            	<% else %>
            		<li id="fat-menu" class="dropdown">
	              		<a href="#" class="dropdown-toggle" data-toggle="dropdown">
	                		<i class="icon-user icon-white"></i>  Account <b class="caret"></b>
	              		</a>
	              		<ul class="dropdown-menu">
	              			<li>
	              				<%= link_to signin_path do %>
									<i class="icon-ok-circle icon-black"></i>Sign in
	              				<% end %>
	              			</li>
	              			<li>
	              				<%= link_to signup_path do %>
									<i class="icon-plus-sign icon-black"></i>Sign up
	              				<% end %>
	              			</li>
	              		</ul>
	              	</li>
		        <% end %>
	        </ul>
	      	<ul class="nav pull-right">
	      		<% if signed_in? %>
	      			<% if current_user.admin? %>
	            		<li id="fat-menu" class="dropdown">
		              		<a href="#" class="dropdown-toggle" data-toggle="dropdown"> <i class="icon-cog icon-white"></i> Admin
		                		 <b class="caret"></b>
		              		</a>
		              		<ul class="dropdown-menu">
		              			<li>
		              				<%= link_to users_path do %>
										<i class="icon-list-alt icon-black"></i> Users
		              				<% end %>
		              			</li>   
		              			<li>
		              				<%= link_to articles_path do %>
										<i class="icon-book icon-black"></i> Articles
		              				<% end %>
		              			</li>
		              			<li>
		              				<%= link_to show_all_games_path do %>
										<i class="icon-align-justify icon-black"></i> Games
		              				<% end %>
		              			</li>		
		              		</ul>
		              	</li>
		            <% end %>
          		<% end %>
	      	</ul>
	      </div>	
      </div>
    </header>